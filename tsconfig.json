{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "target": "es5",
    "noImplicitAny": false,
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "./src/",
    "outDir": "./dist/",
    "noImplicitThis": false,
    "removeComments": true,
    "lib": [
      "es5",
      "es6",
      "es2015",
      "es7",
      "es2016",
      "es2018",
      "es2017"
    ],
    "paths": {
      "@/*": ["./*"],
      "@S/*": ["./services/*"],
      "@T/*": ["./utils/*"],
      "@C/*": ["./config/*"]
    }
  },
  "awesomeTypescriptLoaderOptions": {},
  "declaration": true,
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts"
  ]
}
