{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "target": "es5",
    "noImplicitAny": false,
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "./src/",
    "outDir": "./dist/",
    "noImplicitThis": false,
    "removeComments": false,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2015.promise",
      "es2015.collection",
      "es2015.iterable",
      "es2015.core",
      "dom"
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "awesomeTypescriptLoaderOptions": {},
  "declaration": true,
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
